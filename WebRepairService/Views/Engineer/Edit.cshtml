@model EngineerOrderEditDto
@{
    ViewData["Title"] = "Изменение заказа #" + Model.OrderId;
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="OrderId" />

        <div class="card mt-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="StatusId" class="form-label"></label>
                            <select asp-for="StatusId" asp-items="Model.Statuses" class="form-select">
                                <option value="">-- Выберите статус --</option>
                            </select>
                            <span asp-validation-for="StatusId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="EngineerId" class="form-label"></label>
                            <select asp-for="EngineerId" asp-items="Model.Engineers" class="form-select">
                                <option value="">-- Выберите инженера --</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Сохранить
            </button>
            <a asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-secondary">
                <i class="fas fa-times"></i> Отмена
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}