@using Microsoft.AspNetCore.Identity
@using Service
@using WebRepairService.Components
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Ожидание подтверждения";
}

@if (User?.Identity?.IsAuthenticated != true)
{
    <script>
        window.location.href = '@Url.Action("Login", "Account")';
    </script>
    return;
}

<div class="confirmation-container">
    <div class="confirmation-card shadow fade-in">
        <h1 class="confirmation-title text-center">
            Добро пожаловать!
        </h1>
        @{
            var user = await UserManager.GetUserAsync(User);
            if (user != null && await UserManager.HasNoRolesAsync(user))
            {
                <div class="alert alert-warning text-center mt-4">
                    <i class="fas fa-user-clock fa-3x mb-3 text-warning animated-icon"></i>
                    <h4 class="alert-heading">Ожидание подтверждения</h4>
                    <p>Администратор еще не назначил вам роль.<br />Пожалуйста, дождитесь подтверждения аккаунта.</p>
                </div>
            }
        }
    </div>
</div>

@section Styles {
    <style>
        .confirmation-container {
            max-width: 800px;
            margin: 4rem auto;
            padding: 2rem;
        }

        .confirmation-card {
            background-color: #ffffff;
            border-radius: 1rem;
            padding: 2rem;
            box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease-in-out;
        }

        .confirmation-title {
            font-size: 1.75rem;
            color: #2f4f4f;
            font-weight: 600;
            margin-bottom: 1.5rem;
        }

        .alert-warning {
            background-color: #fffbe6;
            border: 1px solid #ffe58f;
            color: #614700;
            border-radius: 0.75rem;
            padding: 1.5rem;
        }

        .spinner-grow-custom {
            width: 3rem;
            height: 3rem;
            animation: spinner-grow 1s linear infinite;
        }

        .fade-in {
            animation: fadeIn 0.8s ease-in-out both;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .animated-icon {
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%

        {
            transform: scale(1);
            opacity: 1;
        }

        50% {
            transform: scale(1.15);
            opacity: 0.7;
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }

        }
    </style>
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
