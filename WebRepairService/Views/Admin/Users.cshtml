@using WebRepairService.Controllers
@model List<UserRoleViewModel>
@{
    ViewData["Title"] = "Управление пользователями";
}

<div class="container">
    <h1>Управление пользователями</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>ФИО</th>
                <th>Дата регистрации</th>
                <th>Роли</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.FullName</td>
                    <td>@user.RegistrationDate.ToString("dd.MM.yyyy")</td>
                    <td>
                        @string.Join(", ", user.Roles)
                    </td>
                    <td>
                        <form asp-action="UpdateRole" method="post">
                            <input type="hidden" name="userId" value="@user.UserId" />

                            <div class="form-group">
                                <select name="role" class="form-control">
                                    @foreach (var role in ViewBag.AllRoles)
                                    {
                                        <option value="@role">@role</option>
                                    }
                                </select>
                            </div>

                            <div class="btn-group">
                                <button type="submit" name="isSelected" value="true" class="btn btn-success btn-sm">
                                    Добавить роль
                                </button>
                                <button type="submit" name="isSelected" value="false" class="btn btn-danger btn-sm">
                                    Удалить роль
                                </button>
                            </div>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Styles {
    <style>
        .table {
            margin-top: 20px;
        }

        .btn-group {
            margin-top: 5px;
        }

        .form-control {
            width: 150px;
            display: inline-block;
        }
    </style>
}