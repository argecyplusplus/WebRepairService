@using WebRepairService.Controllers
@model List<UserRoleViewModel>
@{
    ViewData["Title"] = "Управление пользователями";
}

<div class="container">
    <h1>Управление пользователями</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }


    <table class="table table-striped">
        <thead>
            <tr>
                <th>Юзернейм</th>
                <th>ФИО</th>
                <th>Email</th>
                <th>Телефон</th>
                <th>Дата регистрации</th>
                <th>Текущая роль</th>
                <th>Установить роль</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.RegistrationDate.ToString("dd.MM.yyyy")</td>
                    <td>
                        @string.Join(", ", user.Roles)
                    </td>
                    <td>
                        <form asp-action="SetRole" method="post">
                            <input type="hidden" name="userId" value="@user.UserId" />

                            <select name="selectedRole" class="form-control">
                                <option value="">Без роли</option>
                                @foreach (var role in ViewBag.AllRoles as List<string>)
                                {
                                    <option value="@role" selected="@(user.Roles.Contains(role) ? "selected" : null)">
                                        @role
                                    </option>
                                }
                            </select>

                            <button type="submit" class="btn btn-primary btn-sm mt-1">Сохранить</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="DeleteUser" method="post" onsubmit="return confirm('Вы уверены, что хотите удалить этого пользователя?');">
                            <input type="hidden" name="userId" value="@user.UserId" />
                            <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Styles {
    <style>
        .table {
            margin-top: 20px;
        }

        .btn-group {
            margin-top: 5px;
        }

        .form-control {
            width: 150px;
            display: inline-block;
        }
    </style>
}
@section Scripts {
    <script>
        $(document).ready(function() {
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
}