@using WebRepairService.Controllers
@model List<UserRoleViewModel>
@{
    ViewData["Title"] = "Управление пользователями";
}

<div class="container">
    <h1>Управление пользователями</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>ФИО</th>
                <th>Дата регистрации</th>
                <th>Текущая роль</th>
                <th>Установить роль</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.FullName</td>
                    <td>@user.RegistrationDate.ToString("dd.MM.yyyy")</td>
                    <td>
                        @string.Join(", ", user.Roles)
                    </td>
                    <td>
                        <form asp-action="SetRole" method="post">
                            <input type="hidden" name="userId" value="@user.UserId" />

                            <select name="selectedRole" class="form-control">
                                <option value="">Без роли</option>
                                @foreach (var role in ViewBag.AllRoles as List<string>)
                                {
                                    <option value="@role" selected="@(user.Roles.Contains(role) ? "selected" : null)">
                                        @role
                                    </option>
                                }
                            </select>

                            <button type="submit" class="btn btn-primary btn-sm mt-1">Сохранить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Styles {
    <style>
        .table {
            margin-top: 20px;
        }

        .btn-group {
            margin-top: 5px;
        }

        .form-control {
            width: 150px;
            display: inline-block;
        }
    </style>
}