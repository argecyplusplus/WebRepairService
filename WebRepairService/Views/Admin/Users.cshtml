@using WebRepairService.Controllers
@model List<UserWithRoleViewModel>
@{
    ViewData["Title"] = "Управление пользователями";
}

<div class="container">
    <h1>Управление пользователями</h1>

    <table class="table table-striped mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Email</th>
                <th>ФИО</th>
                <th>Дата регистрации</th>
                <th>Роль</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.FullName</td>
                    <td>@user.RegistrationDate.ToString("dd.MM.yyyy")</td>
                    <td>@user.CurrentRole</td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Редактировать
                            </a>
                            <button class="btn btn-danger btn-sm delete-btn" data-userid="@user.Id">
                                <i class="fas fa-trash-alt"></i> Удалить
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Модальное окно подтверждения удаления -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Подтверждение удаления</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Вы уверены, что хотите удалить этого пользователя?
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-danger">Удалить</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.delete-btn').click(function() {
                var userId = $(this).data('userid');
                $('#deleteForm').attr('action', '/Admin/DeleteUser/' + userId);
                $('#deleteModal').modal('show');
            });
        });
    </script>
}

@section Styles {
    <style>
        .table th, .table td {
            vertical-align: middle;
        }

        .btn-group {
            white-space: nowrap;
        }
    </style>
}