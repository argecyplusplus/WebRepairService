@model Order
@{
    ViewData["Title"] = "Детали заказа #" + Model.OrderId;
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="card mt-4">
        <div class="card-header">
            <h4>Основная информация</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Клиент:</dt>
                <dd class="col-sm-9">@Model.ClientFullName</dd>

                <dt class="col-sm-3">Телефон:</dt>
                <dd class="col-sm-9">@Model.ClientPhone</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.ClientEmail</dd>

                <dt class="col-sm-3">Устройство:</dt>
                <dd class="col-sm-9">@Model.DeviceType?.Name (@Model.Model)</dd>

                <dt class="col-sm-3">Услуга:</dt>
                <dd class="col-sm-9">@Model.ServiceType?.Name</dd>

                <dt class="col-sm-3">Статус:</dt>
                <dd class="col-sm-9"><span class="badge bg-secondary">@Model.Status?.Name</span></dd>

                <dt class="col-sm-3">Описание:</dt>
                <dd class="col-sm-9">@Model.Details</dd>

                <dt class="col-sm-3">Цена:</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3">Оператор:</dt>
                <dd class="col-sm-9">@Model.Operator?.FullName</dd>

                <dt class="col-sm-3">Инженер:</dt>
                <dd class="col-sm-9">@(Model.Engineer?.FullName ?? "не назначен")</dd>

                <dt class="col-sm-3">Дата создания:</dt>
                <dd class="col-sm-9">@Model.CreationDate.ToString("dd.MM.yyyy HH:mm")</dd>

                <dt class="col-sm-3">Дата завершения:</dt>
                <dd class="col-sm-9">
                    @(Model.CompletionDate?.ToString("dd.MM.yyyy HH:mm") ?? "отсутствует")
                </dd>
            </dl>
        </div>
    </div>

    <!-- Блок фотографий -->
    @if (Model.Photos != null && Model.Photos.Count > 0)
    {
        <div class="card mt-4">
            <div class="card-header">
                <h4>Фотографии</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var photo in Model.Photos)
                    {
                        <div class="col-md-3 mb-3">
                            <img src="@photo.Link" class="img-thumbnail" alt="Фото заказа">
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Назад к списку
        </a>
       
    </div>
</div>