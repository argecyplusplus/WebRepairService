@model Order
@{
    ViewData["Title"] = "Создание заказа";
}

<div class="container">
    <h1>Создание заказа</h1>

    <form asp-action="Create" method="post" enctype="multipart/form-data" id="orderForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-6">
                <h4>Данные клиента</h4>

                <div class="form-group mb-3">
                    <label asp-for="ClientFullName" class="form-label"></label>
                    <input asp-for="ClientFullName" class="form-control" />
                    <span asp-validation-for="ClientFullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ClientPhone" class="form-label"></label>
                    <input asp-for="ClientPhone" class="form-control" />
                    <span asp-validation-for="ClientPhone" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ClientEmail" class="form-label"></label>
                    <input asp-for="ClientEmail" class="form-control" />
                    <span asp-validation-for="ClientEmail" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <h4>Данные устройства</h4>

                <div class="form-group mb-3">
                    <label asp-for="DeviceTypeId" class="form-label"></label>
                    <select asp-for="DeviceTypeId" class="form-control">
                        <option value="">-- Выберите тип устройства --</option>
                        @foreach (var item in (ViewBag.DeviceTypes as List<SelectListItem>))
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <span asp-validation-for="DeviceTypeId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Model" class="form-label"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ServiceTypeId" class="form-label"></label>
                    <select asp-for="ServiceTypeId" class="form-control">
                        <option value="">-- Выберите тип услуги --</option>
                        @foreach (var item in (ViewBag.ServiceTypes as List<SelectListItem>))
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <span asp-validation-for="ServiceTypeId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group mb-3">
                    <label asp-for="Details" class="form-label"></label>
                    <textarea asp-for="Details" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EngineerId" class="form-label"></label>
                    <select asp-for="EngineerId" class="form-control">
                        <option value="">-- Не назначен --</option>
                        @foreach (var item in (ViewBag.Engineers as List<SelectListItem>))
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>

                <!-- Блок загрузки фотографий -->
                <div class="form-group mb-3">
                    <label class="form-label">Фотографии устройства</label>
                    <input type="file" name="photos" id="photoUpload" class="form-control"
                           accept="image/*" multiple />
                    <small class="text-muted">Можно выбрать несколько файлов (макс. 5MB каждый)</small>
                </div>

                <div id="photoPreview" class="row mb-3">
                    <!-- Здесь будут отображаться превью загружаемых фото -->
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Создать заказ
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Назад к списку
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Превью фотографий перед загрузкой
            $('#photoUpload').change(function() {
                $('#photoPreview').empty();
                var files = this.files;

                if (files.length > 10) {
                    alert('Максимальное количество фотографий - 10');
                    $(this).val('');
                    return;
                }

                for (var i = 0; i < files.length; i++) {
                    var file = files[i];

                    // Проверка размера файла (макс. 5MB)
                    if (file.size > 5 * 1024 * 1024) {
                        alert('Файл "' + file.name + '" слишком большой (макс. 5MB)');
                        $(this).val('');
                        return;
                    }

                    if (!file.type.match('image.*')) continue;

                    var reader = new FileReader();
                    reader.onload = (function(file) {
                        return function(e) {
                            var previewHtml = `
                                <div class="col-md-2 mb-2">
                                    <div class="card">
                                        <img src="${e.target.result}" class="card-img-top"
                                            alt="Превью" style="height: 100px; object-fit: cover;">
                                        <div class="card-body p-1">
                                            <small class="text-muted d-block text-truncate">${file.name}</small>
                                            <small class="text-muted">${(file.size/1024).toFixed(1)} KB</small>
                                        </div>
                                    </div>
                                </div>`;
                            $('#photoPreview').append(previewHtml);
                        };
                    })(file);
                    reader.readAsDataURL(file);
                }
            });

            // Валидация формы перед отправкой
            $('#orderForm').submit(function() {
                var files = $('#photoUpload')[0].files;
                for (var i = 0; i < files.length; i++) {
                    if (files[i].size > 5 * 1024 * 1024) {
                        alert('Файл "' + files[i].name + '" превышает максимальный размер 5MB');
                        return false;
                    }
                }
                return true;
            });
        });
    </script>
}

@section Styles {
    <style>
        #photoPreview .card {
            height: 100%;
        }
        #photoPreview .card-img-top {
            object-fit: cover;
        }
        .text-truncate {
            max-width: 100%;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
    </style>
}