@model OrderEditDto
@{
    ViewData["Title"] = "Редактирование заказа #" + Model.OrderId;
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <form asp-action="Edit" method="post" class="mt-4" enctype="multipart/form-data">
        <input type="hidden" asp-for="OrderId" />
        <input type="hidden" id="deletedPhotos" name="DeletedPhotos" value="" />

        <div class="row">
            <div class="col-md-6">
                <h4>Данные клиента</h4>

                <div class="form-group mb-3">
                    <label asp-for="ClientFullName" class="form-label"></label>
                    <input asp-for="ClientFullName" class="form-control" />
                    <span asp-validation-for="ClientFullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ClientPhone" class="form-label"></label>
                    <input asp-for="ClientPhone" class="form-control" />
                    <span asp-validation-for="ClientPhone" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ClientEmail" class="form-label"></label>
                    <input asp-for="ClientEmail" class="form-control" />
                    <span asp-validation-for="ClientEmail" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <h4>Данные устройства</h4>

                <div class="form-group mb-3">
                    <label asp-for="DeviceModel" class="form-label"></label>
                    <input asp-for="DeviceModel" class="form-control" />
                    <span asp-validation-for="DeviceModel" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DeviceTypeId" class="form-label"></label>
                    <select asp-for="DeviceTypeId" asp-items="Model.DeviceTypes" class="form-select">
                        <option value="">-- Выберите тип устройства --</option>
                    </select>
                    <span asp-validation-for="DeviceTypeId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ServiceTypeId" class="form-label"></label>
                    <select asp-for="ServiceTypeId" asp-items="Model.ServiceTypes" class="form-select">
                        <option value="">-- Выберите тип услуги --</option>
                    </select>
                    <span asp-validation-for="ServiceTypeId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12">
                <div class="form-group mb-3">
                    <label asp-for="Details" class="form-label"></label>
                    <textarea asp-for="Details" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="StatusId" class="form-label"></label>
                    <select asp-for="StatusId" asp-items="Model.Statuses" class="form-select"></select>
                    <span asp-validation-for="StatusId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EngineerId" class="form-label"></label>
                    <select asp-for="EngineerId" asp-items="Model.Engineers" class="form-select">
                        <option value="">-- Не назначен --</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Блок текущих фотографий -->
        @if (Model.Photos != null && Model.Photos.Count > 0)
        {
            <div class="row mt-4">
                <div class="col-12">
                    <h4>Текущие фотографии</h4>
                    <div id="currentPhotosContainer" class="row">
                        @foreach (var photo in Model.Photos)
                        {
                            <div class="col-md-3 mb-3 photo-item" data-id="@photo.PhotoId">
                                <div class="card h-100">
                                    <img src="@photo.Link" class="card-img-top" alt="Фото заказа">
                                    <div class="card-body p-2 text-center">
                                        <button type="button" class="btn btn-sm btn-danger delete-photo">
                                            <i class="fas fa-trash-alt"></i> Удалить
                                        </button>
                                        <button type="button" class="btn btn-sm btn-secondary restore-photo d-none">
                                            <i class="fas fa-undo"></i> Восстановить
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        <!-- Блок загрузки новых фотографий -->
        <div class="row mt-3">
            <div class="col-12">
                <div class="form-group">
                    <label asp-for="NewPhotos" class="form-label">Добавить новые фото</label>
                    <input asp-for="NewPhotos" type="file" class="form-control" accept="image/*" multiple />
                    <span asp-validation-for="NewPhotos" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Сохранить изменения
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Назад к списку
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $(document).ready(function() {
            var deletedPhotos = [];

            // Удаление фото (отметка для удаления)
            $(document).on('click', '.delete-photo', function() {
                var $photoItem = $(this).closest('.photo-item');
                var photoId = $photoItem.data('id');

                // Помечаем фото для удаления
                if (!deletedPhotos.includes(photoId)) {
                    deletedPhotos.push(photoId);
                    $('#deletedPhotos').val(deletedPhotos.join(','));
                }

                // Визуальные изменения
                $photoItem.addClass('to-be-deleted');
                $(this).addClass('d-none');
                $photoItem.find('.restore-photo').removeClass('d-none');
            });

            // Восстановление фото
            $(document).on('click', '.restore-photo', function() {
                var $photoItem = $(this).closest('.photo-item');
                var photoId = $photoItem.data('id');

                // Удаляем из списка на удаление
                deletedPhotos = deletedPhotos.filter(id => id !== photoId);
                $('#deletedPhotos').val(deletedPhotos.join(','));

                // Визуальные изменения
                $photoItem.removeClass('to-be-deleted');
                $(this).addClass('d-none');
                $photoItem.find('.delete-photo').removeClass('d-none');
            });
        });
    </script>
}

@section Styles {
    <style>
        .photo-item .card-img-top {
            height: 180px;
            object-fit: cover;
        }

        .photo-item .card {
            transition: all 0.3s ease;
        }

        .photo-item:hover .card {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        .photo-item.to-be-deleted .card {
            opacity: 0.5;
            border: 2px dashed #dc3545;
        }

        .delete-photo, .restore-photo {
            width: 100%;
            margin-top: 5px;
        }

        .form-select {
            padding: 0.375rem 2.25rem 0.375rem 0.75rem;
        }
    </style>
}