@model IEnumerable<ServiceTypeViewModel>
@{
    ViewData["Title"] = "Управление типами услуг";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Добавить тип услуги
        </a>
    </div>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Название</th>
                <th>Минимальная цена</th>
                <th>Минимальное время</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.MinimalPrice.ToString("C")</td>
                    <td>@item.MinimalWorktime.ToString(@"hh\:mm")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.ServiceTypeId"
                               class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i> Изменить
                            </a>
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.ServiceTypeId" />
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger"
                                        onclick="return confirm('Вы уверены, что хотите удалить этот тип услуги?')">
                                    <i class="fas fa-trash-alt"></i> Удалить
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>